<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% if (locals.id) { %>
     <p>Short URL : </p>
     <a  href="http://localhost:8000/url/<%=locals.id%>" >localhost:8000/url/<%=locals.id%></a>
    <% } %>
     
    <form action="/url" method="post">
        <label for="url">Enter Original Url : </label>
        <input type="text" placeholder="www.example.com" name="url">
        <button type="submit">submit</button>
    </form>

    <% if (locals.urls) { %>
        <table>
            <thead>
                <th>Index</th>
                <th>Original URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url,index) => { %>
                    <tr>
                        <td><%=index+1 %></td>
                        <td><%=url.originalURL%></td>
                        <td>http:localhost:8000/url/<%=url.shortID%></td>
                        <td><%=url.visitHistory.length%></td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    
    <% } %>
</body>
</html>